    <script>
        // --- SISTEMA AUT√îNOMO DE SEGURAN√áA E CONHECIMENTO (MOCK INTELIGENTE) ---
        
        const knowledgeBase = {
            "rentabilidade": 
                "Estrat√©gia Zimora: Otimiza√ß√£o de Estoque (previs√£o de demanda via IA reduz sobras em 15%) + Precifica√ß√£o Din√¢mica (ajuste em tempo real). Foque no LTV (Lifetime Value).",
            "lucro": 
                "Estrat√©gia Zimora: Otimiza√ß√£o de Estoque (previs√£o de demanda via IA reduz sobras em 15%) + Precifica√ß√£o Din√¢mica (ajuste em tempo real). Foque no LTV (Lifetime Value).",
            
            "custos": 
                "Protocolo de Redu√ß√£o: 1. RPA para eliminar tarefas manuais no financeiro. 2. IoT para efici√™ncia energ√©tica. 3. Algoritmos preditivos para negocia√ß√£o de insumos.",
            "operacional": 
                "Protocolo de Redu√ß√£o: 1. RPA para eliminar tarefas manuais no financeiro. 2. IoT para efici√™ncia energ√©tica. 3. Algoritmos preditivos para negocia√ß√£o de insumos.",
            
            "treinamento": 
                "Gest√£o Cognitiva: Use tutores virtuais para onboarding 24/7 e an√°lise de sentimento para prever turnover. Personalize trilhas de aprendizado.",
            "equipe": 
                "Gest√£o Cognitiva: Use tutores virtuais para onboarding 24/7 e an√°lise de sentimento para prever turnover. Personalize trilhas de aprendizado.",
                
            "default":
                "An√°lise em andamento. Nossos sistemas identificaram uma oportunidade de otimiza√ß√£o de 12-18% para este cen√°rio. Recomendo uma auditoria completa dos seus dados."
        };

        // Simula o pensamento da IA sem chamar API externa
        async function callGeminiMock(prompt) {
            return new Promise(resolve => {
                const delay = Math.floor(Math.random() * 800) + 800; // Levemente mais r√°pido
                
                setTimeout(() => {
                    const lowerPrompt = prompt.toLowerCase();
                    let response = knowledgeBase["default"];
                    
                    if (lowerPrompt.includes("rentabilidade") || lowerPrompt.includes("lucro") || lowerPrompt.includes("vendas")) {
                        response = knowledgeBase["rentabilidade"];
                    } else if (lowerPrompt.includes("custo") || lowerPrompt.includes("despesa") || lowerPrompt.includes("gasto")) {
                        response = knowledgeBase["custos"];
                    } else if (lowerPrompt.includes("treina") || lowerPrompt.includes("equipe") || lowerPrompt.includes("rh") || lowerPrompt.includes("lideran√ßa")) {
                        response = knowledgeBase["treinamento"];
                    }
                    
                    resolve(response);
                }, delay);
            });
        }

        // --- FUN√á√ÉO PARA OS BOT√ïES DE SUGEST√ÉO ---
        async function askGeminiPreset(question) {
            // Reaproveita a l√≥gica de envio
            const input = document.getElementById('chat-input');
            if(input) input.value = question;
            await askGemini();
        }

        async function askGemini() {
            const input = document.getElementById('chat-input');
            const container = document.getElementById('chat-container');
            const btn = document.getElementById('chat-send-btn');
            
            const question = input?.value.trim();
            if (!question || !container || !btn) return;

            // UI: Adiciona mensagem do usu√°rio
            container.innerHTML += `<div class="chat-bubble user-msg animate-in slide-in-from-right-4 ml-auto">${question}</div>`;
            input.value = "";
            container.scrollTop = container.scrollHeight;

            // UI: Bloqueia e mostra loading
            btn.disabled = true;
            btn.innerHTML = '<i data-lucide="loader-2" class="animate-spin w-4 h-4 text-brand-void"></i>';
            lucide.createIcons();

            container.innerHTML += `<div id="ai-loading" class="chat-bubble ai-msg animate-pulse">‚ú® Acessando Neural Core...</div>`;
            container.scrollTop = container.scrollHeight;

            // L√ìGICA: Chama o Mock
            const response = await callGeminiMock(question);

            // UI: Mostra resposta
            document.getElementById('ai-loading')?.remove();
            container.innerHTML += `<div class="chat-bubble ai-msg animate-in fade-in">‚ú® ${response}</div>`;
            container.scrollTop = container.scrollHeight;
            
            btn.disabled = false;
            btn.innerHTML = '<i data-lucide="zap" class="fill-current w-4 h-4"></i>';
            lucide.createIcons();
            
            setTimeout(() => input.focus(), 100);
        }

        // --- L√ìGICA DO RECRUTADOR (ANIMA√á√ÉO) ---
        function handleRecruiterDecision(decision) {
            const card = document.getElementById('candidate-card');
            const feedback = document.getElementById('recruiter-feedback');
            const icon = document.getElementById('feedback-icon');
            const title = document.getElementById('feedback-title');
            
            if(!card || !feedback) return;

            // 1. Aplica anima√ß√£o de sa√≠da
            if (decision === 'hire') {
                card.classList.add('animate-swipe-right');
                icon.className = "w-16 h-16 rounded-full flex items-center justify-center mb-4 bg-green-500 text-white shadow-[0_0_30px_rgba(34,197,94,0.6)]";
                icon.innerHTML = '<i data-lucide="check" class="w-8 h-8"></i>';
                title.innerText = "Contratado";
                title.classList.add('text-green-400');
            } else {
                card.classList.add('animate-swipe-left');
                icon.className = "w-16 h-16 rounded-full flex items-center justify-center mb-4 bg-red-500 text-white shadow-[0_0_30px_rgba(239,68,68,0.6)]";
                icon.innerHTML = '<i data-lucide="x" class="w-8 h-8"></i>';
                title.innerText = "Rejeitado";
                title.classList.add('text-red-400');
            }
            lucide.createIcons();

            // 2. Mostra feedback ap√≥s o swipe
            setTimeout(() => {
                card.classList.add('invisible'); // Oculta o card original
                feedback.classList.remove('hidden');
                setTimeout(() => feedback.classList.remove('opacity-0'), 50); // Fade in suave
            }, 400);

            // 3. Reseta para o estado inicial ap√≥s 2.5s
            setTimeout(() => {
                feedback.classList.add('opacity-0');
                
                setTimeout(() => {
                    feedback.classList.add('hidden');
                    // Remove classes de anima√ß√£o e visibilidade
                    card.classList.remove('invisible', 'animate-swipe-right', 'animate-swipe-left');
                    // Adiciona anima√ß√£o de entrada
                    card.classList.add('animate-appear');
                    
                    // Limpa formata√ß√£o do feedback para o pr√≥ximo uso
                    title.className = "text-2xl font-bold text-white uppercase tracking-wider";
                    
                    // Remove a anima√ß√£o de entrada depois que terminar para n√£o bugar o pr√≥ximo swipe
                    setTimeout(() => card.classList.remove('animate-appear'), 600);
                }, 500);
            }, 2500);
        }

        async function handleFinalHandoff(e) {
            e.preventDefault();
            const btn = document.getElementById('final-btn');
            const nameEl = document.getElementById('exec-name');
            const compEl = document.getElementById('exec-company');
            const initialView = document.getElementById('setup-initial-view');
            const resultView = document.getElementById('setup-result-view');
            const diagContent = document.getElementById('diagnosis-text');

            if (!btn || !nameEl || !compEl) return;

            btn.disabled = true;
            btn.innerHTML = '<i data-lucide="loader-2" class="animate-spin w-5 h-5 mx-auto text-white"></i>';
            lucide.createIcons();

            setTimeout(() => {
                const company = compEl.value;
                const mockPlan = `
                    <strong>PLANO T√ÅTICO: ${company.toUpperCase()}</strong><br><br>
                    1. <strong>Diagn√≥stico de Dados (48h):</strong> Conex√£o segura dos seus ERPs atuais ao nosso n√∫cleo para leitura de padr√µes ocultos.<br>
                    2. <strong>Automa√ß√£o Imediata:</strong> Implementa√ß√£o de agentes de suporte e financeiro para ROI no primeiro m√™s.<br>
                    3. <strong>Expans√£o Cognitiva:</strong> Treinamento da sua equipe com ferramentas de IA propriet√°rias da Zimora.<br><br>
                    <em>Um consultor s√™nior entrar√° em contato via WhatsApp em breve.</em>
                `;

                initialView.classList.add('hidden');
                resultView.classList.remove('hidden');
                diagContent.innerHTML = mockPlan;
                lucide.createIcons();
            }, 2500); 
        }

        function scrollToContact() {
            const vision = document.getElementById('vision');
            const input = document.getElementById('user-phone');
            if (vision) {
                vision.scrollIntoView({ behavior: 'smooth' });
                setTimeout(() => { if (input) input.focus(); }, 800);
            }
        }

        document.addEventListener('DOMContentLoaded', () => {
            lucide.createIcons();
            const body = document.body;
            const bgLayer = document.getElementById('bg-layer'); 
            const sonarFill = document.getElementById('sonar-fill');
            const navIcons = document.querySelectorAll('.nav-icon');
            const sections = document.querySelectorAll('section');

            const revealObserver = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        const items = entry.target.querySelectorAll('.interactive-blur');
                        items.forEach((item, index) => {
                            setTimeout(() => { item.classList.add('revealed'); }, index * 500); 
                        });
                        revealObserver.unobserve(entry.target);
                    }
                });
            }, { threshold: 0.1 });

            const organizationSection = document.getElementById('organization');
            if (organizationSection) revealObserver.observe(organizationSection);

            const handleScroll = () => {
                const scrollPos = window.scrollY;
                const scrollPercent = scrollPos / (document.documentElement.scrollHeight - window.innerHeight);
                if (sonarFill) sonarFill.style.height = `${scrollPercent * 70}%`;

                if (scrollPercent < 0.2) {
                    if(bgLayer) bgLayer.style.backgroundColor = '#0A193D';
                    body.style.setProperty('--text-color', '#F8FAFC');
                } else if (scrollPercent < 0.75) {
                    if(bgLayer) bgLayer.style.backgroundColor = '#1E40AF';
                    body.style.setProperty('--text-color', '#F8FAFC');
                } else {
                    if(bgLayer) bgLayer.style.backgroundColor = '#F8FAFC';
                    body.style.setProperty('--text-color', '#0F172A');
                    startCounters();
                }

                sections.forEach(sec => {
                    const top = sec.offsetTop - 300;
                    if (scrollPos >= top && scrollPos < top + sec.offsetHeight) {
                        navIcons.forEach(icon => icon.classList.toggle('active', icon.getAttribute('data-section') === sec.id));
                    }
                });
            };
            window.addEventListener('scroll', handleScroll);

            // --- CANVAS PHYSICS: RESPONSIVE DENSITY ---
            const canvas = document.getElementById('main-canvas');
            const ctx = canvas.getContext('2d');
            let width, height, particles = [];
            
            const isMobile = window.innerWidth < 768;
            const particleCount = isMobile ? 25 : 50; 

            function resize() {
                width = window.innerWidth; height = window.innerHeight;
                canvas.width = width; canvas.height = height;
            }

            class Particle {
                constructor() { this.reset(); this.y = Math.random() * height; }
                reset() { 
                    this.x = Math.random() * width; 
                    this.y = -100;
                    this.vx = (Math.random() - 0.5) * 0.08; 
                    this.vy = Math.random() * 0.1 + 0.05; 
                    this.size = Math.random() * 1.5 + 1; 
                    this.color = '#06B6D4';
                }
                update() {
                    const scrollP = window.scrollY / (document.documentElement.scrollHeight - window.innerHeight);
                    if (scrollP > 0.22 && scrollP < 0.65) {
                        const targetX = width / 2 + (Math.random() - 0.5) * 40;
                        this.x += (targetX - this.x) * 0.04; 
                    } else {
                        this.x += this.vx; 
                    }
                    this.y += this.vy;
                    if (this.y > height) this.reset();
                }
                draw() {
                    ctx.fillStyle = this.color;
                    ctx.beginPath(); ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2); ctx.fill();
                }
            }

            let randomConnections = [];
            function updateRandomConnections() {
                randomConnections = randomConnections.filter(c => c.life > 0);
                const scrollP = window.scrollY / (document.documentElement.scrollHeight - window.innerHeight);
                
                const maxConn = isMobile ? 6 : ((scrollP > 0.2 && scrollP < 0.7) ? 5 : 12);

                if (randomConnections.length < maxConn && Math.random() > 0.99) {
                    const a = Math.floor(Math.random() * particles.length);
                    const b = Math.floor(Math.random() * particles.length);
                    if (a !== b) randomConnections.push({ a, b, life: 1.0, speed: Math.random() * 0.003 + 0.0015 });
                }

                randomConnections.forEach(c => {
                    c.life -= c.speed;
                    const pA = particles[c.a]; const pB = particles[c.b];
                    if (pA && pB) {
                        let opacity = Math.sin(c.life * Math.PI) * (isMobile ? 0.06 : 0.08); 
                        ctx.save();
                        ctx.strokeStyle = `rgba(6, 182, 212, ${opacity})`;
                        ctx.lineWidth = 0.5;
                        ctx.beginPath(); ctx.moveTo(pA.x, pA.y); ctx.lineTo(pB.x, pB.y); ctx.stroke();
                        ctx.restore();
                    }
                });
            }

            function initParticles() { resize(); particles = []; for(let i=0; i<particleCount; i++) particles.push(new Particle()); }
            function animate() { ctx.clearRect(0,0,width,height); particles.forEach(p => { p.update(); p.draw(); }); updateRandomConnections(); requestAnimationFrame(animate); }
            window.addEventListener('resize', () => { resize(); initParticles(); });
            initParticles(); animate();
        });

        function triggerPortal() {
            const p = document.getElementById('portal-transition');
            if (p) {
                p.style.display = 'block';
                setTimeout(() => { p.style.transform = 'translate(-50%, -50%) scale(1)'; setTimeout(() => { document.getElementById('modal-setup').classList.replace('hidden', 'flex'); }, 800); }, 50);
            }
        }

        function closePortal() {
            const p = document.getElementById('portal-transition');
            if (p) { p.style.transform = 'translate(-50%, -50%) scale(0)'; document.getElementById('modal-setup').classList.replace('flex', 'hidden'); setTimeout(() => { p.style.display = 'none'; }, 1200); }
        }

        let countersDone = false;
        function startCounters() {
            if (countersDone) return; countersDone = true;
            document.querySelectorAll('.counter').forEach(c => {
                const target = +c.getAttribute('data-target');
                let cur = 0;
                const inc = target / 60;
                const timer = setInterval(() => { if (cur < target) { cur += (target/50); c.innerText = Math.ceil(cur); } else { c.innerText = target; clearInterval(timer); } }, 30);
            });
        }
    </script>
</body>
</html>
